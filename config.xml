<?xml version='1.0' encoding='utf-8'?>
<widget id="com.varnalab.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>VarnaLab</name>
    <description>
      VarnaLab App
    </description>
    <author email="simeonvelichkov@gmail.com" href="https://simov.github.io">
      Simeon Velichkov
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" height="36" platform="android" src="icons/icon-36-ldpi.png" width="36" />
        <icon density="mdpi" height="48" platform="android" src="icons/icon-48-mdpi.png" width="48" />
        <icon density="hdpi" height="72" platform="android" src="icons/icon-72-hdpi.png" width="72" />
        <icon density="xhdpi" height="96" platform="android" src="icons/icon-96-xhdpi.png" width="96" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="^2.3.0">
        <variable name="XWALK_VERSION" value="23+" />
        <variable name="XWALK_LITEVERSION" value="xwalk_core_library_canary:17+" />
        <variable name="XWALK_COMMANDLINE" value="--disable-pull-to-refresh-effect" />
        <variable name="XWALK_MODE" value="embedded" />
        <variable name="XWALK_MULTIPLEAPK" value="true" />
    </plugin>
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
